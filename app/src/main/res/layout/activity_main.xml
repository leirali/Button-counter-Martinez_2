<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.tumblr.leirali.button_counter_martinez.MainActivity">


    <TextView
        android:text="counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/countTextView"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="SUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_button"
        android:layout_below="@+id/add_button"
        android:layout_alignLeft="@+id/add_button"
        android:layout_alignStart="@+id/add_button"
        android:layout_marginTop="25dp" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/countTextView"
        android:layout_alignRight="@+id/countTextView"
        android:layout_alignEnd="@+id/countTextView" />

    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_button"
        android:layout_below="@+id/sub_button"
        android:layout_alignLeft="@+id/sub_button"
        android:layout_alignStart="@+id/sub_button"
        android:layout_marginTop="24dp" />



</RelativeLayout>
